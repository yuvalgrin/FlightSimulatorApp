<UserControl x:Class="FlightSimulatorGui.Views.ControlRoom"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlightSimulatorGui.Views"
             mc:Ignorable="d" 
             d:DesignHeight="160" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tbInput" Grid.Row="0" Grid.ColumnSpan="3">Please enter your command</TextBox>

        <Label x:Name="lblOutput" Grid.Row="1" Grid.Column="0">Output:</Label>
        <TextBox x:Name="tbOutputData" Grid.Row="1" Grid.Column="1">...</TextBox>
        <Button x:Name="btnData" Grid.Row="1" Grid.Column="2" Click="btnData_Click">Submit</Button>


    </Grid>
</UserControl>
